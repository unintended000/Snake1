<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anuto.snake_game.GameLayoutActivity"
    android:background="@drawable/background">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/Field_layout"
        android:layout_width="340dp"
        android:layout_height="360dp"
        android:layout_marginTop="28dp"
        android:minHeight="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/Apple_layout"
        android:layout_width="340dp"
        android:layout_height="360dp"
        android:layout_marginTop="28dp"
        android:minHeight="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/Snake_layout"
        android:layout_width="340dp"
        android:layout_height="360dp"
        android:layout_marginTop="28dp"
        android:minHeight="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Up_click"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:text="↑ "
        android:onClick="Up_click"
        android:layout_marginBottom="46dp"
        app:layout_constraintBottom_toTopOf="@+id/Down_click"
        app:layout_constraintRight_toLeftOf="@+id/Right_click"
        android:layout_marginRight="0dp" />

    <Button
        android:id="@+id/Right_click"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:text="→ "
        android:onClick="Right_click"
        android:layout_marginRight="42dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/Down_click"
        app:layout_constraintLeft_toRightOf="@+id/Left_click"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <Button
        android:id="@+id/Left_click"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:text="← "
        android:onClick="Left_click"
        android:layout_marginRight="134dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="62dp" />

    <Button
        android:id="@+id/Down_click"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:text="↓"
        android:onClick="Down_click"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="88dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        android:layout_marginLeft="42dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="52dp" />

</android.support.constraint.ConstraintLayout>
