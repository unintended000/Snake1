<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anuto.snake_game.GameLayoutActivity"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/textView"
        android:layout_width="286dp"
        android:layout_height="276dp"
        android:text="TextView"
        android:layout_marginLeft="34dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="52dp"
        android:layout_marginStart="34dp" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/circle"
        android:layout_marginEnd="16dp" />

    <ImageButton
        android:id="@+id/But_down"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginBottom="19dp"
        android:layout_marginEnd="66dp"
        android:layout_marginRight="66dp"
        android:background="?attr/listChoiceBackgroundIndicator"
        android:onClick="Down_click"
        app:layout_constraintBottom_toBottomOf="@+id/imageView16"
        app:layout_constraintRight_toRightOf="@+id/imageView16"
        app:srcCompat="@drawable/down"
        />

    <ImageButton
        android:id="@+id/But_up"
        android:layout_width="55dp"
        android:layout_height="0dp"
        android:layout_marginLeft="66dp"
        android:layout_marginStart="66dp"
        android:layout_marginTop="19dp"
        android:background="?attr/listChoiceBackgroundIndicator"
        android:onClick="Up_click"

        app:layout_constraintLeft_toLeftOf="@+id/imageView16"
        app:layout_constraintTop_toTopOf="@+id/imageView16"
        app:srcCompat="@drawable/up" />

    <ImageButton
        android:id="@+id/But_right"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginBottom="66dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:background="?attr/listChoiceBackgroundIndicator"

        android:onClick="Right_click"
        app:layout_constraintBottom_toBottomOf="@+id/imageView16"
        app:layout_constraintRight_toRightOf="@+id/imageView16"
        app:srcCompat="@drawable/right" />

    <ImageButton
        android:id="@+id/But_left"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="66dp"
        android:background="?attr/listChoiceBackgroundIndicator"
        android:onClick="Left_click"

        app:layout_constraintLeft_toLeftOf="@+id/imageView16"
        app:layout_constraintTop_toTopOf="@+id/imageView16"
        app:srcCompat="@drawable/left" />

</android.support.constraint.ConstraintLayout>
